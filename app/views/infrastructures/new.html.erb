<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold text-gray-900 mb-8">Nouvelle Infrastructure</h1>

    <%= form_with(model: @infrastructure, class: "space-y-6") do |form| %>
      <% if @infrastructure.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@infrastructure.errors.count, "erreur") %> ont empêché l'enregistrement de cette infrastructure
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @infrastructure.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="space-y-4">
        <div>
          <%= form.label :name, "Nom", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :infrastructure_type, "Type d'infrastructure", class: "block text-sm font-medium text-gray-700" %>
          <%= form.select :infrastructure_type, 
              ["Serveur", "Data Center", "Réseau", "Cloud", "Autre"],
              { include_blank: "Sélectionnez un type" },
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :energy_consumption, "Consommation d'énergie (kWh)", class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :energy_consumption, step: "0.01", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :carbon_footprint, "Empreinte carbone (kg CO2e)", class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :carbon_footprint, step: "0.01", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :location, "Localisation", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :location, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :status, "Statut", class: "block text-sm font-medium text-gray-700" %>
          <%= form.select :status, 
              [["Actif", "active"], ["Inactif", "inactive"]],
              { include_blank: "Sélectionnez un statut" },
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>
      </div>

      <div class="flex justify-end space-x-4 pt-6">
        <%= link_to "Annuler", infrastructures_path, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        <%= form.submit "Créer", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>
  </div>
</div>
