<%= CSV.generate do |csv|
  csv << ["Nom", "Type", "Consommation (kWh)", "Empreinte CO2 (kg CO2e)", "Localisation", "Statut"]
  @infrastructures.each do |infrastructure|
    csv << [
      infrastructure.name,
      infrastructure.infrastructure_type,
      infrastructure.energy_consumption,
      infrastructure.carbon_footprint,
      infrastructure.location,
      infrastructure.status
    ]
  end
end %> 